<p id="notice"><%= notice %></p>

<h1>Donators</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date birth</th>
      <th>Cpf</th>
      <th>Street</th>
      <th>District</th>
      <th>Number</th>
      <th>City</th>
      <th>State</th>
      <th>Cep</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Password</th>
      <th>Blood type</th>
      <th>Admin</th>
      <th>Receive notification</th>
      <th>Last donation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donators.each do |donator| %>
      <tr>
        <td><%= donator.name %></td>
        <td><%= donator.date_birth %></td>
        <td><%= donator.cpf %></td>
        <td><%= donator.street %></td>
        <td><%= donator.district %></td>
        <td><%= donator.number %></td>
        <td><%= donator.city %></td>
        <td><%= donator.state %></td>
        <td><%= donator.cep %></td>
        <td><%= donator.email %></td>
        <td><%= donator.phone %></td>
        <td><%= donator.password %></td>
        <td><%= donator.blood_type %></td>
        <td><%= donator.admin %></td>
        <td><%= donator.receive_notification %></td>
        <td><%= donator.last_donation %></td>
        <td><%= link_to 'Show', donator %></td>
        <td><%= link_to 'Edit', edit_donator_path(donator) %></td>
        <td><%= link_to 'Destroy', donator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

