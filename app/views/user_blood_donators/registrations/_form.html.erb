<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<% if resource.errors.any? %>
<div id="error_explanation">
  <ul>
    <% user_blood_donator.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="Container Grid-cell u-tablet-sizeFull">
  <div class="Container-header">
    <div class="Grid">
      <div class="Grid-cell u-sizeFull">
        <h3 class="Container-title"> Cadastro de doador </h3>
      </div>
    </div>
  </div>

  <div class="Container-body">


    <div class="Form Form--fluid">
      <div class="Grid">


        <div class="Grid-cell u-desktop-size6of12 u-tablet-sizeFull u-mobile-sizeFull">
          <div class="Form-group">
            <div class="Form-inputDescription u-desktop-size2of12 u-tablet-sizeFull u-mobile-sizeFull">
              <span>Nome<span class="red-text">*</span></span>
            </div>
            <div class="Grid-cell u-desktop-size10of12 u-tablet-sizeFull u-mobile-sizeFull">
              <%= f.text_field :name, class: "Form-inputValue  js-validateName", placeholder: "Ex: Fellipe Callegas" %>
              <span id="errorName" style="display:none;" class="red-text">O campo é obrigatório</span>
            </div>
          </div>
        </div>


        <div class="Grid-cell u-desktop-size6of12 u-tablet-sizeFull u-mobile-sizeFull">
          <div class="Form-group">
            <div class="Form-inputDescription u-desktop-size2of12 u-tablet-sizeFull u-mobile-sizeFull">
              <span>CPF<span class="red-text">*</span></span>
            </div>
            <div class="Grid-cell u-desktop-size10of12 u-tablet-sizeFull u-mobile-sizeFull">
              <%= f.text_field :cpf, class: "Form-inputValue js-validateCPF",
              :maxlength => 14, placeholder: "Digite apenas números" %>
              <span id="errorCPF" style="display:none;" class="red-text"></span>
            </div>
          </div>
        </div>


        <div class="Grid-cell u-desktop-size6of12 u-tablet-sizeFull u-mobile-sizeFull">
          <div class="Form-group">
            <div class="Form-inputDescription u-desktop-size2of12 u-tablet-sizeFull u-mobile-sizeFull">
              <span> Email<span class="red-text">*</span></span>
            </div>
            <div class="Grid-cell u-desktop-size10of12 u-tablet-sizeFull u-mobile-sizeFull">
              <%= f.text_field :email, class: "Form-inputValue js-validateEmail",
              placeholder: "Ex: carlosirla@seuemail.com.br" %>
              <span id="errorEmail" style="display:none;" class="red-text"></span>
            </div>
          </div>
        </div>


        <div class="Grid-cell u-desktop-size6of12 u-tablet-sizeFull u-mobile-sizeFull">
          <div class="Form-group">
            <div class="Form-inputDescription u-desktop-size2of12 u-tablet-sizeFull u-mobile-sizeFull">
              <span>Telefone<span class="red-text">*</span></span>
            </div>
            <div class="Grid-cell u-desktop-size10of12 u-tablet-sizeFull u-mobile-sizeFull">
              <%= f.text_field :phone, class: "Form-inputValue js-validatePhone",
              :maxlength => 13, placeholder: "Ex: (51) 9876-5432" %>
              <span id="errorPhone" style="display:none;" class="red-text"></span>
            </div>
          </div>
        </div>


        <div class="Grid-cell u-desktop-size6of12 u-tablet-sizeFull u-mobile-sizeFull">
          <div class="Form-group">
            <div class="Form-inputDescription u-desktop-size3of12 u-tablet-size3of12 u-mobile-sizeFull">
              <span>Data de nascimento: </span>
            </div>
            <div class="Grid-cell u-desktop-size9of12 u-tablet-size9of12 u-mobile-sizeFull">
              <%= f.date_select :date_birth, {order: [:day, :month, :year],
                start_year: Date.today.year-16, end_year: Date.today.year-69},
                with_css_classes: true, class: "Form-inputValue js-validateDate u-size3of12"%>
                <span id="errorDate" style="display:none;" class="red-text"></span>
              </div>
            </div>
          </div>


          <div class="Grid-cell u-desktop-size6of12 u-tablet-sizeFull u-mobile-sizeFull">
            <div class="Form-group">
              <div class="Form-inputDescription u-desktop-size3of12 u-tablet-size3of12 u-mobile-sizeFull">
                <span class="Form-inputDescription u-size3of12">Tipo sanguíneo: </span>
              </div>
              <div class="Grid-cell u-desktop-size9of12 u-tablet-size9of12 u-mobile-sizeFull">
                <%= f.select :blood_type, ['Não sei', 'A+', 'A-', 'B+', 'B-', 'AB+', 'AB-', 'O+', 'O-'], {include_blank: false}, class: "Form-inputValue u-size9of12" %>
              </div>
            </div>
          </div>


          <div class="Grid-cell u-desktop-size6of12 u-tablet-sizeFull u-mobile-sizeFull">
            <div class="Form-group">
              <div class="Form-inputDescription u-desktop-size2of12 u-tablet-sizeFull u-mobile-sizeFull">
                <span>Senha<span class="red-text">*</span></span>
              </div>
              <div class="u-desktop-size10of12 u-tablet-sizeFull u-mobile-sizeFull">
                <%= f.password_field :password, class: "Form-inputValue js-validatePassword", placeholder: "Senha" %>
                <span id="errorPassword" style="display:none;" class="red-text"></span>
              </div>
            </div>
          </div>



          <div class="Grid-cell u-desktop-size6of12 u-tablet-sizeFull u-mobile-sizeFull">
            <div class="Form-group">
              <div class="Form-inputDescription u-desktop-size2of12 u-tablet-sizeFull u-mobile-sizeFull">
                <span>Confirmar senha<span class="red-text">*</span></span>
              </div>
              <div class="u-desktop-size10of12 u-tablet-sizeFull u-mobile-sizeFull">
                <%= f.password_field :password, class: "Form-inputValue js-validatePasswordConfirmation", placeholder: "Confirme sua senha" %>
                <span id="errorPasswordConfirmation" style="display:none;" class="red-text"></span>
              </div>
            </div>
          </div>


          <div class="Grid-cell u-desktop-size6of12 u-tablet-sizeFull u-mobile-sizeFull">
            <div class="Form-group">
              <div class="Form-inputDescription u-desktop-size3of12 u-tablet-size2of12 u-mobile-sizeFull">
                <span>Última doação: </span>
              </div>
              <div class="Grid-cell u-desktop-size9of12 u-tablet-size10of12 u-mobile-sizeFull">
                <%= f.date_select :last_donation, {order: [:day, :month, :year],
                  start_year: Date.today.year, end_year: Date.today.year-53},
                  with_css_classes: true, class: "Form-inputValue js-validateDate u-size3of12",
                  include_blank: true, include_blank: "Não sei" %>
                  <span id="errorDate" style="display:none;" class="red-text"></span>
                </div>
              </div>
            </div>


            <div class=" Grid-cell u-desktop-size6of12 u-tablet-sizeFull u-mobile-sizeFull">
              <div class="Form-group">
                <div class="Checkbox">
                  <%= check_box_tag(:check_last_donation, 'accepted', false, disable:false) %>
                  <div class="Checkbox">
                    <%= label_tag(:check_last_donation, "Eu nunca fiz uma doação") %>
                  </div>
                </div>
              </div>
            </div>



            <div class="Form-group">
              <div class="Grid-cell u-desktop-sizeFull u-tablet-sizeFull u-mobile-sizeFull u-margin-top-medium">
                <span>Sexo: </span>
                <div class="Radio u-padding-bottom">
                  <%= f.radio_button :genre, "M", :class => "Radio-label", checked: true %>
                  <%= label_tag(:genre, "Masculino") %>
                  <%= f.radio_button :genre, "F", :class => "Radio-label" %>
                  <%= label_tag(:genre, "Feminino") %>
                  <span id="errorGenre" style="display:none;" class="red-text"></span>
                </div>
              </div>
            </div>



            <div class="Form-groupBlock">
              <div class="Checkbox">
                <%= f.check_box :notification %>
                <div class="Checkbox">
                  <%= label_tag(:notification, "Desejo receber notificações") %>
                </div>
              </div>

              <div class="Checkbox">
                <div class="Checkbox-input">
                  <%= check_box_tag(:accept_terms, false, false, class: "js-validateTerms")  %>
                </div>
                <div class="Checkbox-label">
                  <%= label_tag(:accept_terms, "Aceito os termos de uso") %>
                  <span id="errorTerms" style="display:none;" class="red-text"></span>
                </div>
              </div>
            </div>
          </div>
          <div class="u-margin-right-medium u-float-right">
          <%= f.submit "Cadastrar", class: "Button Button--medium is-disabled js-validateButtonDonator" %>
          <%= button_tag "Limpar", type: :reset, class: "Button Button--medium" %>
        </div>

        </div>

        <% end %>
