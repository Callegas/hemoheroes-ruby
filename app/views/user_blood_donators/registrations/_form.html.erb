<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<% if resource.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(resource.errors.count, "error") %> prohibited this user_blood_donator from being saved:</h2>

  <ul>
    <% user_blood_donator.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="Grid Grid--withGutter">
<div class="Container u-margin-10">
  <div class="Container-header">
    <div class="Grid">
      <div class="Grid-cell u-sizeFull">
        <h3 class="Container-header-text"> Cadastro de doador </h3>
      </div>
    </div>
  </div>

  <div class="Container-body">


    <div class="Form Form--fluid">
      <div class="Grid">


        <!-- NAME -->
        <div class="Grid-cell u-desktop-size6of12 u-tablet-size6of12 u-mobile-sizeFull">
          <div class="Form-group">
            <div class="Form-inputDescription u-desktop-size2of12 u-tablet-size2of12 u-mobile-sizeFull">
              <span>Nome: </span>
            </div>
            <div class="Grid-cell u-desktop-size10of12 u-tablet-size10of12 u-mobile-sizeFull">
              <%= f.text_field :name, class: "Form-inputValue  js-validateName" %>
              <span id="errorName" style="display:none;" class="red-text">O campo é obrigatório</span>
            </div>
          </div>
        </div>


        <!-- CPF -->
        <div class="Grid-cell u-desktop-size6of12 u-tablet-size6of12 u-mobile-sizeFull">
          <div class="Form-group">
            <div class="Form-inputDescription u-desktop-size2of12 u-tablet-size2of12 u-mobile-sizeFull">
              <span>CPF: </span>
            </div>
            <div class="Grid-cell u-desktop-size10of12 u-tablet-size10of12 u-mobile-sizeFull">
              <%= f.text_field :cpf, class: "Form-inputValue js-validateCPF" %>
              <span id="errorCPF" style="display:none;" class="red-text"></span>
            </div>
          </div>
        </div>


        <!-- EMAIL -->
        <div class="Grid-cell u-desktop-size6of12 u-tablet-size6of12 u-mobile-sizeFull">
          <div class="Form-group">
            <div class="Form-inputDescription u-desktop-size2of12 u-tablet-size2of12 u-mobile-sizeFull">
              <span> Email: </span>
            </div>
            <div class="Grid-cell u-desktop-size10of12 u-tablet-size10of12 u-mobile-sizeFull">
              <%= f.text_field :email, class: "Form-inputValue js-validateEmail" %>
              <span id="errorEmail" style="display:none;" class="red-text"></span>
            </div>
          </div>
        </div>


        <!-- PHONE -->
        <div class="Grid-cell u-desktop-size6of12 u-tablet-size6of12 u-mobile-sizeFull">
          <div class="Form-group">
            <div class="Form-inputDescription u-desktop-size2of12 u-tablet-size2of12 u-mobile-sizeFull">
              <span>Telefone: </span>
            </div>
            <div class="Grid-cell u-desktop-size10of12 u-tablet-size10of12 u-mobile-sizeFull">
              <%= f.text_field :phone, class: "Form-inputValue js-validatePhone" %>
              <span id="errorPhone" style="display:none;" class="red-text"></span>
            </div>
          </div>
        </div>

        <!-- DATA OF BIRTH-->
        <div class="Grid-cell u-desktop-size6of12 u-tablet-size6of12 u-mobile-sizeFull">
          <div class="Form-group">
            <div class="Form-inputDescription u-desktop-size2of12 u-tablet-size2of12 u-mobile-sizeFull">
              <span>Data de nascimento: </span>
            </div>
            <div class="Grid-cell u-desktop-size10of12 u-tablet-size10of12 u-mobile-sizeFull">
              <%= f.date_select :date_birth, {order: [:day, :month, :year],
                start_year: Date.today.year-16, end_year: Date.today.year-69},
                with_css_classes: true, class: "Form-inputValue js-validateDate u-size3of12"%>
                <span id="errorDate" style="display:none;" class="red-text"></span>
              </div>
            </div>
          </div>


          <!-- BLOOD TYPE -->
          <div class="Grid-cell u-desktop-size6of12 u-tablet-size6of12 u-mobile-sizeFull">
            <div class="Form-group">
              <div class="Form-inputDescription u-desktop-size2of12 u-tablet-size2of12 u-mobile-sizeFull">
                <span class="Form-inputDescription u-size2of12">Tipo sanguíneo: </span>
              </div>
              <div class="Grid-cell u-desktop-size10of12 u-tablet-size10of12 u-mobile-sizeFull">
                <%= f.select :blood_type, ['A+', 'A-', 'B+', 'B-', 'AB+', 'AB-', 'O+', 'O-'], { include_blank: "Não sei" },
                { class: "Form-inputValue u-size10of12" } %>
              </div>
            </div>
          </div>


          <!-- PASSWORD -->
          <div class="Grid-cell u-desktop-size6of12 u-tablet-size6of12 u-mobile-sizeFull">
            <div class="Form-group">
              <div class="Form-inputDescription u-desktop-size2of12 u-tablet-size2of12 u-mobile-sizeFull">
                <span>Senha: </span>
              </div>
              <div class="u-desktop-size10of12 u-tablet-size10of12 u-mobile-sizeFull">
                <%= f.password_field :password, class: "Form-inputValue js-validatePassword" %>
                <span id="errorPassword" style="display:none;" class="red-text"></span>
              </div>
            </div>
          </div>


          <!-- PASSWORD CONFIRMATION -->
          <div class="Grid-cell u-desktop-size6of12 u-tablet-size6of12 u-mobile-sizeFull">
            <div class="Form-group">
              <div class="Form-inputDescription u-desktop-size2of12 u-tablet-size2of12 u-mobile-sizeFull">
                <span>Confirmar de senha: </span>
              </div>
              <div class="u-desktop-size10of12 u-tablet-size10of12 u-mobile-sizeFull">
                <%= f.password_field :password, class: "Form-inputValue js-validatePassword" %>
                <span id="errorPasswordConfirmation" style="display:none;" class="red-text"></span>
              </div>
            </div>
          </div>


          <!-- LAST DONATION -->
          <div class="Grid-cell u-desktop-size6of12 u-tablet-size6of12 u-mobile-sizeFull">
            <div class="Form-group">
              <div class="Form-inputDescription u-desktop-size2of12 u-tablet-size2of12 u-mobile-sizeFull">
                <span>Ultima doação: </span>
              </div>
              <div class="Grid-cell u-desktop-size10of12 u-tablet-size10of12 u-mobile-sizeFull">
                <%= f.date_select :last_donation, {order: [:day, :month, :year],
                  start_year: Date.today.year, end_year: Date.today.year-53},
                  with_css_classes: true, class: "Form-inputValue js-validateDate u-size3of12",
                  include_blank: true, include_blank: "Não sei" %>
                  <span id="errorDate" style="display:none;" class="red-text"></span>
                </div>
              </div>
            </div>
            <div class="Form-group">
              <div class="Checkbox">
                <%= check_box_tag(:check_last_donation, 'accepted', false, disable:false) %>
                <div class="Checkbox">
                  <%= label_tag(:check_last_donation, "Eu nunca fiz uma doação") %>
                </div>
              </div>
            </div>


            <!-- GENDER -->
            <div class="Grid-cell u-desktop-size6of12 u-tablet-size6of12 u-mobile-sizeFull">
              <div class="Form-group">
                <div class="Form-inputDescription u-size2of12">
                  <span>Sexo: </span>
                </div>
                <div class="Radio">
                  <%= radio_button_tag :genre, "sexo", false, class: "Radio-label js-validateGenre" %>
                  <%= label_tag(:genre, "Masculino") %>
                  <%= radio_button_tag :genre, "sexo", false, class: "Radio-label js-validateGenre" %>
                  <%= label_tag(:genre, "Feminino") %>
                  <span id="errorGenre" style="display:none;" class="red-text"></span>
                </div>
              </div>
            </div>


            <div class="Form-group">
              <div class="Checkbox">
                <%= check_box_tag(:notification, 'accepted', false, disable:false) %>
                <div class="Checkbox">
                  <%= label_tag(:notification, "Desejo receber notificações") %>
                </div>
              </div>

              <div class="Form-group">
                <div class="Checkbox">
                  <div class="Checkbox-input">
                    <%= check_box_tag(:accept_terms, false, false, class: "js-validateTerms")  %>
                  </div>
                  <div class="Checkbox-label">
                    <%= label_tag(:accept_terms, "Aceito os termos de uso") %>
                    <span id="errorTerms" style="display:none;" class="red-text"></span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <%= f.submit "Cadastrar", class: "Button Button--medium is-disabled js-validateButton" %>
          <%= button_tag "Limpar", type: :reset, class: "Button Button--medium" %>

        </div>

      </div>

</div>
      <% end %>
