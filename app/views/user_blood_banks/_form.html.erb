<%= form_for(user_blood_bank) do |f| %>
<% if user_blood_bank.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(user_blood_bank.errors.count, "error") %> prohibited this user_blood_bank from being saved:</h2>

  <ul>
    <% user_blood_bank.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="Container">
  <div class="Container-header">
    <div class="Grid">
      <div class="Grid-cell u-sizeFull">
        <h3 class="Container-header-text"> Cadastro de Hospital </h3>
      </div>
    </div>
  </div>

  <div class="Container-section">
    <div class="Grid">
      <!-- 2 Enters = divisão de linha | 1 Enter = divisão de coluna -->
      <div class="Grid Grid-cell u-desktop-size6of12 u-tablet-size6of12 u-largePhone-size6of12 u-smallPhone-sizeFull">
        <div class="Grid">
            <div class="Grid-cell u-size2of12">
              <span class="Input Input-label">Nome: </span>
            </div>
            <div class="Grid-cell u-size10of12">
              <%= f.text_field :name, class: "Input Input-value js-validateName" %>
              <span id="errorName" style="display:none;" class="errorMessage">O campo é obrigatório!</span>
            </div>
        </div>
      </div>

      <div class="Grid Grid-cell u-desktop-size6of12 u-tablet-size6of12 u-largePhone-size6of12 u-smallPhone-sizeFull">
        <div class="Grid">

          <div class="Grid-cell u-size2of12">
            <span class="Input Input-label">CPNJ: </span>

          </div>
          <div class="Grid-cell u-size10of12">
            <%= f.text_field :cnpj, class: "Input Input-value js-validateCNPJ" %>
            <span id="errorCNPJ" style="display:none;" class="errorMessage"></span>
          </div>

        </div>
      </div>


      <div class="Grid Grid-cell u-desktop-size6of12 u-tablet-size6of12 u-largePhone-size6of12 u-smallPhone-sizeFull">
        <div class="Grid">
          <div class="Grid-cell u-size2of12">
            <span class="Input Input-label">Email:</span>
          </div>
          <div class="Grid-cell u-size10of12">
            <%= f.text_field :email, class: "Input Input-value js-validateEmail" %>
            <span id="errorEmail" style="display:none;" class="errorMessage"></span>
          </div>
        </div>
      </div>

        <%= hidden_field :password, :value => @password %>
      </div>
    </div>

    <div class="Grid">
      <div class="actions">
        <div class="Grid-cell u-size1of2">
          <!-- <%= f.submit "Cadastrar", class: "Button Button--medium is-actived" %> -->

                  <%= f.submit "Cadastrar", class: "Button Button--medium is-actived js-validateForm"  %>
              <!-- <button type="submit" class="Button Button--medium is-actived js-validateForm" >Cadastrar</button> -->

        </div>
        <div class="Grid-cell u-size1of2">
          <!-- <%= f.submit "Limpar", class: "Button Button--medium" %> -->

        </div>
      </div>
    </div>

  </div>
</div>

<% end %>
